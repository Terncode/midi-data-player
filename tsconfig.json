{
	"compilerOptions": {
		"target": "es2017",
		"lib": [
			"dom",
			"es6"
		],
		"module": "commonjs",
		"moduleResolution": "node",
        "outDir": "dist",
		"importHelpers": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"declaration": true,
		"noEmitOnError": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noImplicitReturns": true,
		"strict": true,
		"strictFunctionTypes": true,
		"sourceMap": true,
		"preserveConstEnums": true,
	},
	"include": ["src"],
	"exclude": [
		"dist",
		"node_modules"
	]
}
